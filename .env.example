# Frontend Environment Variables for LoanZaar

# Backend API URL
NEXT_PUBLIC_API_URL=https://loanzaar-react-base.onrender.com

# Firebase Configuration
# Get these from Firebase Console > Project Settings > General
# These values are safe to expose in frontend code (they define which Firebase project to connect to)
# However, security rules in Firestore/Realtime Database and Firebase Auth config protect your data
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Firebase Web Push Certificate VAPID Key (FCM)
# Get this from Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
# Keep this secret and only use the public VAPID key
VITE_FCM_VAPID_KEY=your_firebase_vapid_public_key_here

# Google reCAPTCHA v2 Site Key (optional)
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
