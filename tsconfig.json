{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* JS / JSX SUPPORT */
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",

    /* TYPE SAFETY (balanced) */
    "strict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,

    /* NEXT / MODULES */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* BUILD */
    "noEmit": true,
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* PATH ALIASES */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* NEXT.JS */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
